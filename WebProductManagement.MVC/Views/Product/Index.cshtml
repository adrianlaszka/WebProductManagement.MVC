@model IEnumerable<DataAccessLayer.DataTable.Product>

@{
    ViewData["Title"] = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

<div>
    <h2 class='text-center'>Alkatrészek</h2>
    <button asp-action="Create" class='btn btn-primary mb-2'>Új alkatrész hozzáadása</button>
    <div class='row'>
        <table class='table table-striped table-bordered'>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InStock)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPerCell)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InStock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPerCell)
            </td>
            <td>

                            @using (Html.BeginForm("UpdateProduct", "Product", new
                            {
                                id = item.Id,
                                productName = item.ProductName,
                                inStock = item.InStock,
                                maxPerCell = item.MaxPerCell,
                                price = item.Price
                            }, FormMethod.Post))
                            {
                                <input class='btn btn-info m-1' id="Submit" type="submit" value="Módosít" />
                            }

                            @using (Html.BeginForm("ListLocations", "Location", new
                            {
                                id = item.Id,
                                productName = item.ProductName,
                                inStock = item.InStock,
                                maxPerCell = item.MaxPerCell,
                                price = item.Price
                            }, FormMethod.Post))
                            {
                                <input class='btn btn-info m-1' id="Submit" type="submit" value="Bevételezés" />
                            }
              
            </td>
        </tr>
}
    </tbody>
</table>
</div>

</div>

